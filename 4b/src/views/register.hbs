{{> head}}
    {{>navbar}}

    <div class="container px-80 pt-20">
      <div class="bg-white dark:bg-zinc-700 w-fit mx-auto p-6 my-auto rounded-xl">
        <h1 class="text-center text-2xl font-bold dark:text-white mb-6">Register</h1>
        <form method="post" action="/register" class="w-72">
          <div class="mb-3">
            <label for="email" class="block mb-1 font-medium text-gray-900">Email</label>
            <input type="email" name="email" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg block w-full p-2.5" placeholder="name@gmail.com" required />
          </div>
          <div class="mb-3">
            <label for="username" class="block mb-1 font-medium text-gray-900">Username</label>
            <input type="text" name="username" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg block w-full p-2.5" placeholder="name" required />
          </div>
          <div class="mb-3">
            <label for="password" class="block mb-1 font-medium text-gray-900">Password</label>
            <input type="password" name="password" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg block w-full p-2.5" placeholder="password" required />
          </div>
          <button type="submit" class="bg-gray-800 rounded-lg mt-5 mb-1 text-white py-2 w-full">
            Submit
          </button>
        </form>
      </div>
    </div>
    
{{> foot}}